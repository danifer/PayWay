{% extends 'base.html.twig' %}

{% block title %}Charge{% endblock %}

{% block body %}
    <h1>Charge</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ charge.id }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ charge.amount }}</td>
            </tr>
            <tr>
                <th>Currency</th>
                <td>{{ charge.currency }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ charge.description }}</td>
            </tr>
            <tr>
                <th>RecipientEmail</th>
                <td>{{ charge.recipientEmail }}</td>
            </tr>
            <tr>
                <th>AddressLine1</th>
                <td>{{ charge.addressLine1 }}</td>
            </tr>
            <tr>
                <th>AddressPostalCode</th>
                <td>{{ charge.addressPostalCode }}</td>
            </tr>
            <tr>
                <th>Refunded</th>
                <td>{{ charge.refunded ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ charge.notes }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ charge.created ? charge.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ charge.updated ? charge.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_charge_index') }}">back to list</a>

    <a href="{{ path('app_charge_edit', {'id': charge.id}) }}">edit</a>

    {{ include('charge/_delete_form.html.twig') }}
{% endblock %}
